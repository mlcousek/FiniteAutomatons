@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <ul class="navbar-nav user-nav">
        <li class="nav-item">
        <a class="nav-link user-icon" asp-area="Identity" asp-page="/Account/Manage/Email" title="@User.Identity?.Name">
          <i class="fas fa-user-circle"></i>
        </a>
        </li>
        <li class="nav-item">
      <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
    <button type="submit" class="nav-link btn btn-link logout-icon" title="Logout">
      <i class="fas fa-sign-out-alt"></i>
            </button>
        </form>
     </li>
    </ul>
}
else
{
    <ul class="navbar-nav user-nav-logged-out">
        <li class="nav-item">
<a class="nav-link auth-button" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
 <li class="nav-item">
            <a class="nav-link auth-button" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    </ul>
}
