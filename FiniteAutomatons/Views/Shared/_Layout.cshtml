@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FiniteAutomatons</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FiniteAutomatons.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        @if (SignInManager.IsSignedIn(User))
      {
       <nav class="navbar navbar-expand-sm navbar-light custom-navbar">
   <div class="container-fluid">
       <!-- Logo on the left -->
       <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
         <img src="~/images/automata-simulator-logo.png" alt="Automata Simulator" class="navbar-logo" />
       </a>
       <div class="navbar-collapse d-flex justify-content-between align-items-center">
     <!-- Center Navigation -->
   <ul class="navbar-nav mx-auto">
 <li class="nav-item">
           <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
         </li>
       <li class="nav-item">
          <a class="nav-link" asp-area="" asp-controller="SavedAutomaton" asp-action="Index">Saved Automatons</a>
       </li>
           <li class="nav-item">
       <a class="nav-link" asp-area="" asp-controller="SharedAutomaton" asp-action="Index">Shared Automatons</a>
               </li>
 </ul>
    <!-- Right Side - User Icons -->
  <partial name="_LoginPartial" />
         </div>
   </div>
 </nav>
}
    else
    {
   <nav class="navbar navbar-light custom-navbar-logged-out">
     <div class="container-fluid">
       <!-- Logo on the left -->
    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
         <img src="~/images/automata-simulator-logo.png" alt="Automata Simulator" class="navbar-logo" />
       </a>
         <div class="ms-auto">
   <partial name="_LoginPartial" />
       </div>
     </div>
   </nav>
        }
 </header>
    
    <main role="main">
        @RenderBody()
    </main>

    <footer class="custom-footer">
   <div class="footer-content">
          <div class="footer-left">
     <h5>Automaton Simulator</h5>
      </div>
     <div class="footer-center">
       <div class="footer-links">
        <div class="footer-column">
     <h6>Learn</h6>
   <a asp-area="" asp-controller="Home" asp-action="HowItWorks">How it works</a>
   <a asp-area="" asp-controller="Home" asp-action="Docs">Docs</a>
       </div>
            <div class="footer-column">
   <h6>About</h6>
   <a asp-area="" asp-controller="Home" asp-action="Terms">Terms & Conditions</a>
          <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
  </div>
       </div>
     </div>
  </div>
    <div class="footer-copyright">
        Copyright &copy; 2025 Jiří Mičoušek
     </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
