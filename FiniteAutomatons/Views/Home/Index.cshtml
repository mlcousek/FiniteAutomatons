@{
    ViewData["Title"] = "Home";
}

<div class="automaton-workspace">
    <!-- Main Content Area -->
    <div class="workspace-grid">
     <!-- Left Section - Create Automaton -->
        <div class="create-section">
            <div class="section-header">
            <h2>CREATE</h2>
  </div>
 <div class="create-content">
<div class="input-area">
     <!-- Placeholder for future input controls -->
   <p class="placeholder-text">Input controls will be added here</p>
        </div>
    </div>
        </div>

  <!-- Right Section - Graph Canvas -->
    <div class="graph-section">
            <div class="section-header">
      <h2>GRAPH</h2>
       </div>
        <div class="graph-content">
      <canvas id="automatonCanvas" class="automaton-canvas"></canvas>
   </div>
        </div>
    </div>

    <!-- Bottom Control Sections -->
    <div class="control-sections">
        <!-- Input Section -->
        <div class="control-section input-section">
<div class="section-header-custom">
           <h2>INPUT</h2>
       </div>
   <div class="control-content-left">
           <input type="text" class="input-field" placeholder="Enter input string..." />
  </div>
     </div>

 <!-- Simulate Section -->
        <div class="control-section simulate-section">
   <div class="section-header-custom">
    <h2>SIMULATE</h2>
     </div>
            <div class="control-content simulate-buttons">
          <button class="control-btn simulate-btn" title="Start">
    <i class="fas fa-play-circle"></i>
 <span>Start</span>
        </button>
        <button class="control-btn simulate-btn" title="Reset">
        <i class="fas fa-undo"></i>
     <span>Reset</span>
        </button>
              <button class="control-btn simulate-btn" title="Step back">
   <i class="fas fa-step-backward"></i>
             <span>Step back</span>
           </button>
  <button class="control-btn simulate-btn" title="Read next">
     <i class="fas fa-step-forward"></i>
         <span>Read next</span>
        </button>
                <button class="control-btn simulate-btn" title="Read all">
             <i class="fas fa-forward"></i>
      <span>Read all</span>
           </button>
     </div>
      </div>

        <!-- Automaton Type Section -->
        <div class="control-section type-section">
       <div class="section-header-custom">
              <h2>AUTOMATON TYPE</h2>
            </div>
    <div class="control-content type-buttons">
     <button class="control-btn type-btn active">DFA</button>
        <button class="control-btn type-btn">NFA</button>
            <button class="control-btn type-btn">ε-NFA</button>
       <button class="control-btn type-btn">PDA</button>
     </div>
    </div>

        <!-- Minimalize Section -->
        <div class="control-section minimize-section">
          <div class="section-header-custom">
      <h2>MINIMALIZE</h2>
  </div>
   <div class="control-content-right">
     <button class="control-btn minimize-btn">Minimalize</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/canvas.js" asp-append-version="true"></script>
}
