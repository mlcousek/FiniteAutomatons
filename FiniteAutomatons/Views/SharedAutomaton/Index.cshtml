@using FiniteAutomatons.Core.Models.Database
@model List<SharedAutomaton>
@{
    ViewData["Title"] = "Shared Automatons";
    var groups = ViewData["Groups"] as List<SharedAutomatonGroup> ?? [];
    var selectedGroup = ViewData["SelectedGroupId"] as int?;
    var userRole = ViewData["UserRole"] as SharedGroupRole?;
}

<div class="container mt-3">
    <div class="d-flex justify-content-between align-items-center">
        <h2><i class="fas fa-users"></i> Shared Automatons</h2>
    </div>

    @if (TempData["CreateGroupResult"] is string createMsg && !string.IsNullOrWhiteSpace(createMsg))
    {
        var success = TempData["CreateGroupSuccess"] as string == "1";
        <div class="row mb-3">
            <div class="col-12">
                <div class="alert @(success ? "alert-success" : "alert-danger") alert-dismissible fade show">
                    @createMsg
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        </div>
    }

    @if (TempData["Error"] is string errorMsg)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @errorMsg
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Create Group Modal -->
    <div class="modal fade" id="createGroupModal" tabindex="-1" aria-labelledby="createGroupModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <form asp-action="CreateGroup" asp-controller="SharedAutomaton" method="post">
                    @Html.AntiForgeryToken()
                    <div class="modal-header py-3 px-4">
                        <h5 class="modal-title mb-0" id="createGroupModalLabel">Create Shared Group</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body py-4 px-4">
                        <div class="mb-3">
                            <label for="groupName" class="form-label">Name</label>
                            <input id="groupName" name="name" required class="form-control" placeholder="Enter group name" />
                        </div>
                        <div class="mb-3">
                            <label for="groupDescription" class="form-label">Description (optional)</label>
                            <textarea id="groupDescription" name="description" class="form-control" rows="3" placeholder="Describe the purpose of this group"></textarea>
                        </div>
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> You will be the owner of this group and can invite others to collaborate.
                        </div>
                    </div>
                    <div class="modal-footer py-3 px-4">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success">Create Group</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-8">
            <form method="get" asp-action="Index" asp-controller="SharedAutomaton" class="d-flex gap-2 align-items-center">
                <label class="mb-0"><i class="fas fa-filter"></i> Filter by group:</label>
                <select name="groupId" class="form-select" style="width:auto;" onchange="this.form.submit()">
                    <option value="">All Groups</option>
                    @foreach (var g in groups)
                    {
                        <option value="@g.Id" selected="@(selectedGroup.HasValue && selectedGroup.Value == g.Id)">
                            @g.Name
                        </option>
                    }
                </select>
                @if (selectedGroup.HasValue && userRole.HasValue)
                {
                    <span class="badge bg-primary ms-2">
                        Your Role: @userRole.Value
                    </span>
                }
            </form>
        </div>
        <div class="col-md-4 text-end">
            <button type="button" class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#createGroupModal">
                <i class="fas fa-plus"></i> Create Group
            </button>
            @if (selectedGroup.HasValue && userRole >= SharedGroupRole.Admin)
            {
                <a asp-action="ManageMembers" asp-controller="SharedAutomaton" asp-route-groupId="@selectedGroup.Value" class="btn btn-sm btn-primary ms-1">
                    <i class="fas fa-users-cog"></i> Manage Members
                </a>
            }
            @if (selectedGroup.HasValue && userRole == SharedGroupRole.Owner)
            {
                <form asp-action="DeleteGroup" asp-controller="SharedAutomaton" method="post" class="d-inline ms-1" onsubmit="return confirm('Delete this group? All automatons will become unassigned.');">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@selectedGroup.Value" />
                    <button type="submit" class="btn btn-sm btn-outline-danger">
                        <i class="fas fa-trash"></i> Delete Group
                    </button>
                </form>
            }
        </div>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> 
            @if (selectedGroup.HasValue)
            {
                <text>This group has no automatons yet. @(userRole >= SharedGroupRole.Contributor ? "You can add automatons from the editor." : "")</text>
            }
            else
            {
                <text>You haven't joined any shared groups yet. Create a group or ask someone to invite you!</text>
            }
        </div>
    }
    else
    {
        <div class="list-group">
            @foreach (var item in Model)
            {
                <div class="list-group-item">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="flex-grow-1">
                            <h5 class="mb-1">
                                @item.Name
                                @if (item.SaveMode == AutomatonSaveMode.WithState)
                                {
                                    <span class="badge bg-success ms-2" title="Saved with execution state">
                                        <i class="fas fa-save"></i> State
                                    </span>
                                }
                                else if (item.SaveMode == AutomatonSaveMode.WithInput)
                                {
                                    <span class="badge bg-info ms-2" title="Saved with input">
                                        <i class="fas fa-keyboard"></i> Input
                                    </span>
                                }
                            </h5>
                            @if (!string.IsNullOrWhiteSpace(item.Description))
                            {
                                <p class="mb-1 text-muted">@item.Description</p>
                            }
                            <small class="text-muted">
                                <i class="fas fa-user"></i> Created by: <strong>@item.CreatedByUserId</strong>
                                • <i class="fas fa-clock"></i> @item.CreatedAt.ToLocalTime().ToString("g")
                                @if (item.ModifiedAt.HasValue)
                                {
                                    <text>• <i class="fas fa-edit"></i> Modified: @item.ModifiedAt.Value.ToLocalTime().ToString("g")</text>
                                }
                                @if (item.Assignments != null && item.Assignments.Count > 0)
                                {
                                    <text>• <i class="fas fa-folder"></i> Groups: @string.Join(", ", item.Assignments.Select(a => a.Group?.Name ?? a.GroupId.ToString()))</text>
                                }
                            </small>
                        </div>

                        <div class="text-end ms-3">
                            @{
                                var hasInput = item.SaveMode >= AutomatonSaveMode.WithInput;
                                var hasState = item.SaveMode == AutomatonSaveMode.WithState;
                                var canEdit = userRole >= SharedGroupRole.Editor || item.CreatedByUserId == User.Identity?.Name;
                            }

                            @* Always show Load (structure only) *@
                            <a asp-controller="SharedAutomaton" asp-action="Load" asp-route-id="@item.Id" asp-route-mode="structure" class="btn btn-sm btn-primary mb-1">
                                <i class="fas fa-upload"></i> Load
                            </a>
                            
                            @* Show "Load with Input" if input was saved *@
                            @if (hasInput)
                            {
                                <a asp-controller="SharedAutomaton" asp-action="Load" asp-route-id="@item.Id" asp-route-mode="input" class="btn btn-sm btn-info mb-1">
                                    <i class="fas fa-keyboard"></i> Load with Input
                                </a>
                            }
                            
                            @* Show "Load as State" if execution state was saved *@
                            @if (hasState)
                            {
                                <a asp-controller="SharedAutomaton" asp-action="Load" asp-route-id="@item.Id" asp-route-mode="state" class="btn btn-sm btn-outline-primary mb-1">
                                    <i class="fas fa-play-circle"></i> Load as State
                                </a>
                            }

                            @if (canEdit)
                            {
                                <form asp-action="Delete" asp-controller="SharedAutomaton" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger mb-1" onclick="return confirm('Delete this shared automaton?');">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
.badge {
    font-size: 0.75rem;
}
</style>
