@model (FiniteAutomatons.Core.Models.Database.SavedAutomatonGroup group, List<FiniteAutomatons.Core.Models.Database.SavedAutomatonGroupMember> members)
@{
    var group = Model.group;
    var members = Model.members;
    ViewData["Title"] = $"Manage Group - {group.Name}";
}

<div class="container">
    <h2>Manage Group: @group.Name</h2>

    <div class="mb-3">
        <p>@group.Description</p>
        <form asp-action="SetGroupSharingPolicy" method="post" class="d-inline">
            <input type="hidden" name="groupId" value="@group.Id" />
            <div class="form-check form-switch d-inline">
                <input class="form-check-input" type="checkbox" name="membersCanShare" value="true" @(group.MembersCanShare ? "checked" : "") onchange="this.form.submit();" />
                <label class="form-check-label">Members may share into this group</label>
            </div>
        </form>
    </div>

    <h4>Members</h4>
    <table class="table">
        <thead>
            <tr>
                <th>UserId</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in members)
            {
                <tr>
                    <td>@m.UserId</td>
                    <td>
                        <form asp-action="RemoveGroupMember" method="post" class="d-inline">
                            <input type="hidden" name="groupId" value="@group.Id" />
                            <input type="hidden" name="memberUserId" value="@m.UserId" />
                            <button class="btn btn-sm btn-outline-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h5>Add member</h5>
    <form asp-action="AddGroupMember" method="post" class="row g-2">
        <input type="hidden" name="groupId" value="@group.Id" />
        <div class="col-auto">
            <input type="text" name="memberUserId" class="form-control" placeholder="User Id (email)" required />
        </div>
        <div class="col-auto">
            <button class="btn btn-primary">Add</button>
        </div>
    </form>

    <div class="mt-3">
        <a asp-action="Groups" class="btn btn-outline-secondary">Back to groups</a>
    </div>
</div>