@model IEnumerable<FiniteAutomatons.Core.Models.Database.SavedAutomaton>
@{
    ViewData["Title"] = "Saved Automatons";
    var groups = ViewData["Groups"] as List<FiniteAutomatons.Core.Models.Database.SavedAutomatonGroup> ?? new();
    var selectedGroupId = ViewData["SelectedGroupId"] as int?;
}

<div class="container">
    <h2>Saved Automatons</h2>

    <div class="mb-3 d-flex align-items-center">
        <a asp-action="CreateAutomaton" asp-controller="Automaton" class="btn btn-primary me-2">Create New</a>

        <form asp-action="SavedAutomatons" method="get" class="d-flex">
            <select name="groupId" class="form-select me-2">
                <option value="">All groups</option>
                @foreach (var g in groups)
                {
                    <option value="@g.Id" selected="@(selectedGroupId==g.Id)">@g.Name</option>
                }
            </select>
            <button type="submit" class="btn btn-outline-secondary">Filter</button>
        </form>

        <div class="ms-2">
            <a asp-action="Groups" class="btn btn-outline-secondary me-2">Manage Groups</a>
        </div>

        <div class="ms-auto">
            <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#createGroupModal">Create Group</button>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">You have no saved automatons yet.</div>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Saved State</th>
                    <th>Group</th>
                    <th>Created</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@(item.HasExecutionState ? "Yes" : "No")</td>
                        <td>
                            @if (item.Group != null)
                            {
                                <span>@item.Group.Name</span>
                            }
                        </td>
                        <td>@item.CreatedAt.ToLocalTime().ToString("g")</td>
                        <td>
                            <a asp-action="LoadSavedAutomaton" asp-route-id="@item.Id" class="btn btn-sm btn-success">Load</a>
                            @if (item.HasExecutionState)
                            {
                                <a asp-action="LoadSavedAutomaton" asp-route-id="@item.Id" asp-route-asState="true" class="btn btn-sm btn-primary ms-1">Load as State</a>
                            }
                            <form asp-action="DeleteSavedAutomaton" method="post" class="d-inline ms-1" onsubmit="return confirm('Delete this saved automaton?');">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<!-- Create Group Modal -->
<div class="modal fade" id="createGroupModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="CreateSavedGroup" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Create Group</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Group name</label>
                        <input type="text" name="name" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description (optional)</label>
                        <textarea name="description" class="form-control"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>
